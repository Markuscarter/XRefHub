{
  "manifest_version": 3,
  "name": "Xrefhub",
  "version": "1.0.0",
  "description": "Uses AI to analyze social media posts against policy rules and logs the results to a Google Sheet.",
  "permissions": [
    "storage",
    "scripting",
    "identity",
    "identity.email",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.googleapis.com/",
    "https://api.openai.com/",
    "https://api.groq.com/"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Xrefhub",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "settings.html",
  "web_accessible_resources": [
    {
      "resources": ["content-scanner.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "oauth2": {
    "client_id": "1035106798421-5cctc6ntqokrs0gitg10700nlps5t42g.apps.googleusercontent.com",
    "scopes": [
        "https://www.googleapis.com/auth/userinfo.email",
        "https://www.googleapis.com/auth/drive.readonly",
        "https://www.googleapis.com/auth/spreadsheets",
        "https://www.googleapis.com/auth/cloud-platform"
    ]
  }
}